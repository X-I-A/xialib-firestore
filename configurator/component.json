{
  "FirestoreDepositor": {
    "type": "object",
    "title": "Firestore Depositor",
    "options": {
      "collapsed": true
    },
    "properties": {
      "_package": {
        "type": "string",
        "title": "Pypi Package Name",
        "template": "xialib-firestore"
      },
      "_module": {
        "type": "string",
        "title": "Module Name",
        "template": "xialib_firestore"
      },
      "db": {
        "type": "string",
        "title": "Firestore Database",
        "watch": {
          "db": "connectors"
        },
        "enumSource": [
          {
            "source": "db",
            "filter": "{% if item.option._tags.includes('google.cloud.firestore.Client') %}1{% endif %}",
            "value": "{{item.name}}"
          }
        ]
      }
    },
    "required": [
      "_package",
      "_module",
      "db"
    ]
  },
  "db-firestore": {
    "type": "object",
    "title": "Firestore Database",
    "options": {
      "collapsed": true
    },
    "properties": {
      "_package": {
        "type": "string",
        "title": "Pypi Package Name",
        "template": "google-cloud-firestore"
      },
      "_module": {
        "type": "string",
        "title": "Module Name",
        "template": "google.cloud.firestore"
      },
      "_class": {
        "type": "string",
        "title": "Class Name",
        "template": "Client"
      },
      "_tags": {
        "type": "array",
        "title": "Tags",
        "format": "table",
        "items": {
          "type": "string"
        },
        "default": [
          "google.cloud.firestore.Client"
        ]
      }
    },
    "required": [
      "_package",
      "_module",
      "_class"
    ]
  }
}